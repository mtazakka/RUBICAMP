<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <!--ini masukin file css-->
</head>

<body>
    <h1>Daftar Siswa</h1>
    <a href="/add">Tambah</a>
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Nama</th>
                <th>Alamat</th>
                <th>Actionsw</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= item.nama %>
                    </td>
                    <td>
                        <%= item.alamat %>
                    </td>
                    <td>
                        <a href="/delete/id<%= index %>">delete</a>
                        <a href="/edit/<%= index %>">edit</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>